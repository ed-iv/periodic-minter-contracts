{
  "extends": "solhint:recommended",
  "plugins": ["prettier"],
  "rules": {
    "compiler-version": ["error", "^0.8.0"],
    "func-visibility": "off",
    "no-empty-blocks": "off",
    "no-inline-assembly": "off",
    "prettier/prettier": [
      "error",
      {
        "printWidth": 120
      }
    ],
    "quotes": ["error", "double"],
    "reason-string": "off",
    "state-visibility": "off"
  }
}
